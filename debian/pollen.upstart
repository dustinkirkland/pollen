# pollen - Entropy-as-a-Service

description	"Entropy-as-a-Service"
author		"Dustin Kirkland <dustin.kirkland@gmail.com>"

start on start on runlevel [2345]
stop on start on runlevel [!2345]

setuid pollen
respawn
respawn limit 10 5

script
	. /etc/default/pollen
	# Ensure our device exists, and is a character device, before starting our server
	if [ -c "$DEVICE" ]; then
		if [ -n "$BYTES" ] then
			exec pollen -http-port=$HTTP_PORT -https-port=$HTTPS_PORT -device=$DEVICE -bytes=$BYTES
		else
			exec pollen -http-port=$HTTP_PORT -https-port=$HTTPS_PORT -device=$DEVICE
		fi
	fi
end script
